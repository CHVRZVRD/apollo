{
  "name": "apollo",
  "version": "1.0.0",
  "description": "Apollo Website",
  "main": "app.js",
  "scripts": {
    "watch:sass": "node-sass sass/main.scss css/app.css -w",
    "devserver": "live-server",
    "start": "npm-run-all --parallel devserver watch:sass",
    "compile:sass": "node-sass sass/main.scss css/app.comp.css",
    "concat:css": "concat -o css/app.concat.css css/app.comp.css",
    "prefix:css": "postcss --use autoprefixer -b 'last 10 versions' css/app.concat.css -o css/app.prefix.css",
    "compress:css": "node-sass css/app.prefix.css css/app.css --output-style compressed",
    "build:css": "npm-run-all compile:sass concat:css prefix:css compress:css"
  },
  "author": "chris v",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^8.5.2",
    "concat": "^1.0.3",
    "node-sass": "^4.9.0",
    "npm-run-all": "^4.1.3",
    "postcss-cli": "^5.0.0",
    "live-server": "^1.2.0"
  }
}
